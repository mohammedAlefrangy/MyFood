<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <ScrollView
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

    <ImageView
        android:id="@+id/imagItem"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        />

    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/dr_grey_bottom"/>


   <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/Desc"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="left"
                                        android:padding="10dp"
                                        android:text="Description"
                                        android:textColor="@android:color/black"
                                        android:textSize="18dp"/>

                                    <TextView
                                        android:id="@+id/Description_of_item"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_weight="0"
                                        android:clickable="false"
                                        android:gravity="left"
                                        android:padding="10dp"
                                        android:textColor="@android:color/darker_gray"
                                        android:textSize="14dp"/>


                                </LinearLayout>

    <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/dr_grey_bottom"/>

        <LinearLayout
                                    android:id="@+id/Discount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/Discountt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="left"
                                        android:padding="10dp"
                                        android:text="Discount"
                                        android:textColor="@android:color/black"
                                        android:textSize="18dp"
                                        android:visibility="visible" />

                                    <TextView
                                        android:id="@+id/Discount_of_item"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_weight="0"
                                        android:clickable="false"
                                        android:gravity="left"
                                        android:padding="10dp"
                                        android:textColor="@android:color/black"
                                        android:visibility="visible"/>




                                </LinearLayout>

        <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/dr_grey_bottom"/>

        <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:gravity="left"
                                        android:padding="10dp"
                                        android:text="Name Of Food"
                                        android:textColor="@android:color/black"
                                        android:textSize= "18dp"/>

                                    <TextView
                                        android:id="@+id/name_of_food"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:gravity="left"
                                        android:maxLines="4"
                                        android:padding="10dp"
                                        android:scrollbars="vertical"
                                        android:textColor="@android:color/black"
                                        android:textSize="12dp"

                                        />
                                </LinearLayout>

        <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/dr_grey_bottom"/>

        <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/priceitem"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="left"
                                        android:padding="10dp"
                                        android:text="Price"
                                        android:textColor="@android:color/black"
                                        android:textSize="18dp"/>

                                    <TextView
                                        android:id="@+id/pric_of_item"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_weight="0"
                                        android:clickable="false"
                                        android:gravity="left"
                                        android:padding="10dp"
                                        android:textColor="@android:color/darker_gray"
                                        android:textSize="14dp"/>


                                </LinearLayout>

        <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/dr_grey_bottom"/>

        <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/seller"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="left"
                                        android:padding="10dp"
                                        android:text="Seller"
                                        android:textColor="@android:color/black"
                                        android:textSize="18dp"/>

                                    <TextView
                                        android:id="@+id/seller_Of_item"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_weight="0"
                                        android:clickable="false"
                                        android:gravity="left"
                                        android:padding="10dp"
                                        android:textColor="@android:color/darker_gray"
                                        android:textSize="14dp"/>


                                </LinearLayout>

        <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/dr_grey_bottom"/>

                    <Button
                        android:id="@+id/Order_now"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="0"
                        android:background="@drawable/rectangle3"
                        android:clickable="true"
                        android:padding="5dp"
                        android:text="Order Now"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"/>



                </LinearLayout>

            </ScrollView>

        </LinearLayout>




