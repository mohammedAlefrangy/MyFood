<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:textAlignment="textStart">

    <TextView
        android:id="@+id/listRest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="List of restaurants"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/searchService"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/listRest"
        android:layout_marginStart="9dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/searchbg"
        android:gravity="right"
        android:hint="Search for list"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="60dp"
        android:paddingTop="10dp" />


    <ListView
        android:id="@+id/lv_filter_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/searchService"
        android:layout_below="@+id/searchService"
        android:textAlignment="center"
        android:layout_marginTop="26dp"
        android:layout_weight="1" />

</RelativeLayout>